<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    tools:context=".home.fragments.HomeMainFragment">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp2_home_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" />

    <RelativeLayout
        android:id="@+id/ll_top_homemain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:id="@+id/tv_live"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/live_brodcast"
            android:textSize="16sp"
            android:textColor="#cccccc"/>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tablt_home_main"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:paddingTop="10dp"
            android:paddingBottom="6dp"
            app:tabPaddingBottom="4dp"
            app:tabIndicatorFullWidth="false"
            app:tabIndicatorColor="@color/white"
            app:tabIndicatorHeight="2dp"

            app:tabMode="fixed"/>

        <ImageButton
            android:id="@+id/ib_search"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/iv_search"/>

    </RelativeLayout>

</FrameLayout>